# Server
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000
FLASK_DEBUG=0

# Secret (recommended): replace with a long random value
# Generate one: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_LONG_RANDOM_VALUE

# Redis (optional for local dev; required for production durability)
# For local Redis: docker run -d --name redis -p 6379:6379 redis:7
# Then uncomment the next line:
# REDIS_URL=redis://localhost:6379/0

# Security
SESSION_COOKIE_SECURE=0
FORCE_HTTPS=0
TRUST_PROXY=0
SESSION_IDLE_TIMEOUT_SECONDS=900

# CAPTCHA and anti-abuse
CAPTCHA_REFRESH_AFTER_FAILS=2
FAIL_WINDOW_SECONDS=300
FAILURES_BEFORE_TEMP_BLOCK=10
TEMP_BLOCK_SECONDS=300
